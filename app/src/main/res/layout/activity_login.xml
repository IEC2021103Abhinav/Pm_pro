<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3CCF3"
    tools:context=".LoginActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieAnimationView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/login" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/reg"
        android:gravity="center"
        android:text="Aise hi entry nahi milega Madam"
        android:textColor="@color/text_l"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/simple"
        android:paddingLeft="25dp"
        android:text="Naam Batayie Bhaao Khane wali Madam ka??"
        android:textColor="@color/text_l"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/logemail"
        app:layout_constraintStart_toStartOf="@id/logemail" />

    <EditText
        android:id="@+id/logemail"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:inputType="textEmailAddress"
        android:background="@color/white"
        android:layout_marginTop="60dp"
        android:drawableRight="@drawable/beat"
        android:hint="Rimjhim Mehta"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


    <TextView
        android:id="@+id/tv5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/simple"
        android:paddingLeft="25dp"
        android:text="Tumhara Saath Chahiye Dogi Naa Madam ??"
        android:textColor="@color/text_l"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/log_pwd"
        app:layout_constraintStart_toStartOf="@id/log_pwd" />

    <EditText
        android:id="@+id/log_pwd"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:background="@color/white"
        android:drawableRight="@drawable/beat"
        android:hint="Yes"
        android:inputType="textPassword"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logemail" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/loin_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#756AB6"
        app:layout_constraintTop_toBottomOf="@id/log_pwd"
        android:text="Dekhte Hai"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:fontFamily="@font/submit"
        android:layout_marginTop="50dp"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>